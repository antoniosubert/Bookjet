<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rect02"
    android:padding="20dp">

    <!--Button: go back, dissmiss dialog-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:src="@drawable/ic_back_black"
        android:background="@android:color/transparent"
        android:padding="5dp"/>

    <!--TextView: Dialog title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTv"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Dodaj komentar"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"/>

    <!--TextInputLayout: input comment-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentTil"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="20dp"
        android:hint="Komentiraj"
        app:startIconDrawable="@drawable/ic_comment_black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentEt"
            android:background="@drawable/shape_edittext01"
            android:inputType="textMultiLine|textCapSentences"/>


    </com.google.android.material.textfield.TextInputLayout>

    <!--Button: add comment-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:layout_below="@id/commentTil"
        android:layout_marginTop="20dp"
        android:text="PoÅ¡alji"
        android:textColor="@color/white"
        android:background="@drawable/shape_button01"/>


</RelativeLayout>